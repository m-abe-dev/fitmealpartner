{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@components/*": ["src/components/*"],
      "@screens/*": ["src/screens/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],
      "@types/*": ["src/types/*"],
      "@constants/*": ["src/constants/*"],
      "@design-system/*": ["src/design-system/*"],
      "@design-system": ["src/design-system"]
    },
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": ["**/*", "types/**/*", "**/*.ts"]
}
